<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PhoneLoginActivity"
    android:background="@color/trial">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:hint="Write the Phone Number..."
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/phone_number_input"
        android:layout_marginTop="7dp"
        android:hint="Enter The verification Code..."
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send The Verification Code"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/verification_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/send_verification_code"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>


</RelativeLayout>